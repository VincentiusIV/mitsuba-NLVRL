<scene version="2.0.0">
    <include filename="fragments/bsdfs-rgb.xml"/>
    <default name="spp" value="64"/>
    <default name="res" value="256"/>
    <default name="max_depth" value="6"/>
	<default name="cbox_size" value="0.005"/>
	<default name="cbox_x" value="-250"/>
	<default name="cbox_y" value="-200"/>
	<default name="cbox_z" value="-250"/>
	<default name="volume_size" value="1.5"/>

	<integrator type="photonmap">
		<integer name="lightEmissions" value="1000000"/>
    </integrator>	
		
    <sensor type="perspective">
        <string name="fov_axis" value="smaller"/>
        <float name="near_clip" value="1"/>
        <float name="far_clip" value="2800"/>
        <float name="focus_distance" value="1000"/>
        <float name="fov" value="39.3077"/>
        <transform name="to_world">
            <lookat origin="0.125, 0.4, -5"
                    target="0.125, 0.4, 0"
                    up    ="  0,   1,    0"/>
        </transform>
        <sampler type="independent">  <!-- ldsampler -->
            <integer name="sample_count" value="$spp"/>
        </sampler>
        <film type="hdrfilm">
            <integer name="width" value="$res"/>
            <integer name="height" value="$res"/>
            <rfilter type="box"/>
            <string name="pixel_format" value="rgb"/>
        </film>
    </sensor>
	
	<shape type="obj">
        <string name="filename" value="meshes/cbox_luminaire.obj"/>
        <transform name="to_world">
            <translate x="$cbox_x" y="-200.5" z="$cbox_z"/>
			<scale value="$cbox_size"/>
        </transform>
        <ref id="light"/>
        <ref id="area-emitter"/>
    </shape>
	
	<emitter type="area" id="area-emitter">
        <rgb name="radiance" value="18.387, 10.9873, 2.75357"/>
		<vector name="radcolor" value="18.387, 10.9873, 2.75357"/>
    </emitter>
	
	<shape type="obj">
        <string name="filename" value="meshes/cbox_floor.obj"/>
        <ref id="white"/>
			<transform name="to_world">
            <translate x="$cbox_x" y="$cbox_y" z="$cbox_z"/>
			<scale value="$cbox_size"/>
        </transform>
    </shape>
    <shape type="obj">
        <string name="filename" value="meshes/cbox_ceiling.obj"/>
        <ref id="white"/>
		<transform name="to_world">
            <translate x="$cbox_x" y="$cbox_y" z="$cbox_z"/>
			<scale value="$cbox_size"/>
        </transform>
    </shape>
    <shape type="obj">
        <string name="filename" value="meshes/cbox_back.obj"/>
        <ref id="white"/>
		<transform name="to_world">
            <translate x="$cbox_x" y="$cbox_y" z="$cbox_z"/>
			<scale value="$cbox_size"/>
        </transform>
    </shape>
    <shape type="obj">
        <string name="filename" value="meshes/cbox_greenwall.obj"/>
        <ref id="green"/>
		<transform name="to_world">
            <translate x="$cbox_x" y="$cbox_y" z="$cbox_z"/>
			<scale value="$cbox_size"/>
        </transform>
    </shape>
    <shape type="obj">
        <string name="filename" value="meshes/cbox_redwall.obj"/>
        <ref id="red"/>
		<transform name="to_world">
            <translate x="$cbox_x" y="$cbox_y" z="$cbox_z"/>
			<scale value="$cbox_size"/>
        </transform>
    </shape>

	
	<medium id="medium1" type="heterogeneous">
        <float name="scale" value="5"/>

        <volume name="sigma_t" type="gridvolume">
            <transform name="to_world">
                <scale value="$volume_size"/>
                <translate x="-0.5" y="-0.5" z="-0.5"/>
            </transform>
            <boolean name="use_grid_bbox" value="false"/>
            <string name="filename" value="textures/sigmat.vol"/>
        </volume>

        <rgb name="albedo" value="0.99, 0.5, 0.5"/>
        <phase type="isotropic" />
    </medium>
    <shape type="obj">
        <string name="filename" value="meshes/unit_cube_centered.obj"/>
        <bsdf type="null">
        </bsdf>
        <ref id="medium1" name="interior"/>
        <transform name="to_world">
            <scale value="$volume_size"/>
        </transform>
    </shape>
	
    <shape type="obj">
        <string name="filename" value="meshes/sphere_base.obj"/>
        <bsdf type="diffuse">
        </bsdf>
		<transform name="to_world">
        </transform>
    </shape>
</scene>
