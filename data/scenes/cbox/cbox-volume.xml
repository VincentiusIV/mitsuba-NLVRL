<scene version="2.0.0">
    <include filename="fragments/bsdfs-rgb.xml"/>
	
	<default name="spp" value="1"/>
    <default name="res" value="256"/>
    <default name="max_depth" value="6"/>
	
    <default name="cbox_x" value="-275"/>
    <default name="cbox_y" value="-275"/>
    <default name="cbox_z" value="-30"/>
	
    <sensor type="perspective">
        <string name="fov_axis" value="smaller"/>
        <float name="near_clip" value="10"/>
        <float name="far_clip" value="2800"/>
        <float name="focus_distance" value="1000"/>
        <float name="fov" value="39.3077"/>
        <transform name="to_world">
            <lookat origin="0, 0, -800"
                    target="0, 0, -799"
                    up    ="  0,   1,    0"/>
        </transform>
        <sampler type="independent">  <!-- ldsampler -->
            <integer name="sample_count" value="$spp"/>
        </sampler>
        <film type="hdrfilm">
            <integer name="width" value="$res"/>
            <integer name="height" value="$res"/>
            <rfilter type="box"/>
            <string name="pixel_format" value="rgb"/>
        </film>
    </sensor>
	
	<shape type="obj">
        <string name="filename" value="meshes/cbox_luminaire.obj"/>
        <transform name="to_world">
            <translate x="$cbox_x" y="-275.5" z="$cbox_z"/>
        </transform>
        <ref id="light"/>
        <ref id="area-emitter"/>
    </shape>

	<emitter type="area" id="area-emitter">
        <rgb name="radiance" value="18.387, 10.9873, 2.75357"/>
		<vector name="radcolor" value="18.387, 10.9873, 2.75357"/>
    </emitter>
	
	<medium id="medium1" type="homogeneous">
        <float name="scale" value="0.005"/>
        <rgb name="sigma_t" value="0.5"/>
        <rgb name="albedo" value="1.0, 1.0, 1.0"/>
        <phase type="isotropic" />
    </medium>

	<shape type="obj">
        <string name="filename" value="meshes/cbox_floor.obj"/>
		<transform name="to_world">
            <translate x="$cbox_x" y="$cbox_y" z="$cbox_z"/>
        </transform>
		
        <bsdf type="conductor">
            <spectrum name="eta" value="0.789000"/>
            <spectrum name="k" value="6.150000"/>
        </bsdf>
    </shape>
    <shape type="obj">
        <string name="filename" value="meshes/cbox_ceiling.obj"/>
		<transform name="to_world">
            <translate x="$cbox_x" y="$cbox_y" z="$cbox_z"/>
        </transform>
        <ref id="white"/>
    </shape>
    <shape type="obj">
        <string name="filename" value="meshes/cbox_back.obj"/>
		<transform name="to_world">
            <translate x="$cbox_x" y="$cbox_y" z="$cbox_z"/>
        </transform>
        <ref id="white"/>
    </shape>
    <shape type="obj">
        <string name="filename" value="meshes/cbox_greenwall.obj"/>
		<transform name="to_world">
            <translate x="$cbox_x" y="$cbox_y" z="$cbox_z"/>
        </transform>
        <ref id="green"/>
    </shape>
    <shape type="obj">
        <string name="filename" value="meshes/cbox_redwall.obj"/>
		<transform name="to_world">
            <translate x="$cbox_x" y="$cbox_y" z="$cbox_z"/>
        </transform>
        <ref id="red"/>
    </shape>
    <shape type="obj">
        <string name="filename" value="meshes/cbox_smallbox.obj"/>
		<transform name="to_world">
            <translate x="$cbox_x" y="$cbox_y" z="$cbox_z"/>
        </transform>
        <ref id="box"/>
    </shape>
    <shape type="obj">
        <string name="filename" value="meshes/cbox_largebox.obj"/>
		<transform name="to_world">
            <translate x="$cbox_x" y="$cbox_y" z="$cbox_z"/>
        </transform>
        <ref id="box"/>
    </shape>
	<!-- Fog -->
	<shape type="obj">
        <string name="filename" value="meshes/unit_cube_centered.obj"/>
        <bsdf type="null">
        </bsdf>
		<transform name="to_world">
            <scale x="400" y="400" z="400"/>
        </transform>
        <ref id="medium1" name="interior"/>
    </shape>
</scene>
